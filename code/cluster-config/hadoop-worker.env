# ===================================
# Hadoop 主节点环境变量配置
# ===================================

# ==========================================
# 核心配置 (core-site.xml)
# ==========================================
CORE_CONF_fs_defaultFS=hdfs://namenode:9000
CORE_CONF_hadoop_tmp_dir=/tmp/hadoop
CORE_CONF_hadoop_http_staticuser_user=root

# ==========================================
# HDFS 配置 (hdfs-site.xml)
# ==========================================
HDFS_CONF_dfs_replication=2
HDFS_CONF_dfs_namenode_name_dir=file:///hadoop/dfs/name
HDFS_CONF_dfs_namenode_rpc___bind___host=0.0.0.0
HDFS_CONF_dfs_namenode_http___bind___host=0.0.0.0
HDFS_CONF_dfs_datanode_rpc___bind___host=0.0.0.0
HDFS_CONF_dfs_datanode_http___bind___host=0.0.0.0

# ==========================================
# YARN 配置 (yarn-site.xml)
# ==========================================
YARN_CONF_yarn_resourcemanager_hostname=resourcemanager
YARN_CONF_yarn_resourcemanager_webapp_address=0.0.0.0:8088
YARN_CONF_yarn_resourcemanager_scheduler_address=resourcemanager:8030
YARN_CONF_yarn_resourcemanager_resource___tracker_address=resourcemanager:8031
YARN_CONF_yarn_resourcemanager_address=resourcemanager:8032
YARN_CONF_yarn_log___aggregation___enable=true
YARN_CONF_yarn_log_aggregation_retain_seconds=604800
YARN_CONF_yarn_nodemanager_aux___services=mapreduce_shuffle
YARN_CONF_yarn_nodemanager_aux___services_mapreduce_shuffle_class=org.apache.hadoop.mapred.ShuffleHandler
YARN_CONF_yarn_nodemanager_resource_memory___mb=4096
YARN_CONF_yarn_nodemanager_resource_cpu___vcores=4
YARN_CONF_yarn_scheduler_minimum___allocation___mb=512
YARN_CONF_yarn_scheduler_maximum___allocation___mb=2048

# ==========================================
# MapReduce 配置 (mapred-site.xml)
# ==========================================
MAPRED_CONF_mapreduce_framework_name=yarn
MAPRED_CONF_mapreduce_jobhistory_address=historyserver:10020
MAPRED_CONF_mapreduce_jobhistory_webapp_address=historyserver:8188
MAPRED_CONF_mapreduce_map_memory_mb=1024
MAPRED_CONF_mapreduce_reduce_memory_mb=1024
MAPRED_CONF_mapreduce_map_java_opts=-Xmx800m
MAPRED_CONF_mapreduce_reduce_java_opts=-Xmx800m

# ==========================================
# 容量调度器配置 (capacity-scheduler.xml)
# ==========================================
CAPACITY_SCHEDULER_CONF_yarn_scheduler_capacity_root_default_capacity=100
CAPACITY_SCHEDULER_CONF_yarn_scheduler_capacity_root_default_maximum___capacity=100
CAPACITY_SCHEDULER_CONF_yarn_scheduler_capacity_root_default_user___limit___factor=1.0
CAPACITY_SCHEDULER_CONF_yarn_scheduler_capacity_root_default_state=RUNNING